package blocks

import (
	"github.com/ainsleydev/sclark.uk/views/components"
	"github.com/ainsleydev/sclark.uk/views/svgs"
)

type HeroProps struct {
	Title string
	Lead  string
}

templ Hero() {
	<section class="hero">
		<div class="container">
			<!-- Wrapper -->
			<div class="hero-wrapper">
				<!-- Content -->
				<div class="row justify-content-center justify-content-desk-start hero-row">
					<div class="col-12 col-tab-10 col-desk-8 col-desk-large-6">
						@components.Group() {
							<!-- Title -->
							<h1>Can't find the <br/>right words?</h1>
							<!-- Lead -->
							<p class="lead lead-max-width">
								Combining a love for the English language and written word, S Clark provides two distinct
								professional services â€“ one-to-one English language teaching for non-native speakers and
								content writing and editing for businesses
							</p>
						}
						<!-- Buttons -->
						<div class="btn-container hero-btns">
							@components.Button(components.ButtonProps{
								Text:   "<span>English</span>&nbsp;Lessons",
								Href:   "#english-lessons",
								Filled: true,
							})
							@components.Button(components.ButtonProps{
								Text: "Content&nbsp;<span>Writing</span>",
								Href: "#content-writing",
							})
						</div>
					</div><!-- /Col -->
				</div><!-- /Row -->
				<!-- Scrabble -->
				<figure class="hero-scrabble">
					@svgs.Scrabble()
				</figure>
			</div><!-- /Wrapper -->
			<!-- Logos -->
			<div class="row justify-content-center hero-logos">
				<div class="col-12 col-tab-10 col-desk-12">
					<!-- Logos -->
					@Logos(LogosProps{
						Title: "Trusted by Leading Professionals",
						Items: []LogosItem{
							{Title: "ICE", Src: "/assets/images/logos/ice.svg"},
							{Title: "ainsley.dev", Src: "/assets/images/logos/ainsley-dev.svg", URL: "https://ainsley.dev"},
							{Title: "Dec's Pets", Src: "/assets/images/logos/decs-pets.svg", URL: "https://ainsley.dev"},
							{Title: "Dec's Pets", Src: "/assets/images/logos/schools-and-agents.svg", URL: "https://ainsley.dev"},
							{Title: "Dec's Pets", Src: "/assets/images/logos/jennifer-cooper.svg", URL: "https://ainsley.dev"},
						},
					})
				</div><!-- /Col -->
			</div><!-- /Row -->
		</div><!-- /Container -->
	</section>
}
