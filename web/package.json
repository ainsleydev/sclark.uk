{
	"name": "web",
	"version": "1.0.0",
	"license": "BSD-3-Clause",
	"scripts": {
		"dev": "pnpm watch:go & pnpm watch:assets",
		"watch:go": "pnpm kill && TEMPL_EXPERIMENT=rawgo air -c .air.toml",
		"watch:assets": "node esbuild.mjs --watch",
		"build": "pnpm build:go && pnpm build:assets",
		"build:go": "go build main.go",
		"build:assets": "node esbuild.mjs",
		"check": "pnpm format && pnpm lint && pnpm test",
		"format": "pnpm format:go && pnpm format:assets",
		"format:go": "go fmt ./... && templ fmt .",
		"format:assets": "biome format --write .",
		"lint": "pnpm lint:go && pnpm lint:assets",
		"lint:go": "golangci-lint run --fix ./...",
		"lint:assets": "biome lint --write .",
		"docker": "pnpm docker:build && pnpm docker:run",
		"docker:build": "docker build -t ainsley.dev/web .",
		"docker:run": "docker run -it --init --env-file .env -e APP_ENV=production -p 3000:3000 --rm -ti ainsley.dev/web",
		"docker:clean": "docker rmi ainsley.dev/web && docker image prune",
		"gen": "pnpm generate:templ && pnpm generate:types && pnpm generate:modernizr",
		"generate:templ": "TEMPL_EXPERIMENT=rawgo go generate ./...",
		"generate:types": "go-jsonschema -p types --only-models --struct-name-from-title --capitalization strings --verbose ../cms/src/types/payload.json > ./types/cms.go",
		"generate:modernizr": "modernizr --config modernizr.json --dest ./assets/js/modernizr.js",
		"test": "go test ./... -race $$(go list ./... | temp) -coverprofile=../../coverage.out -covermode=atomic",
		"cover": "go tool cover -html=coverage.out",
		"kill": "lsof -t -i tcp:3000 | xargs kill"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@eslint/js": "^9.6.0",
		"@types/browser-sync": "^2.29.0",
		"browser-sync": "^3.0.2",
		"esbuild": "^0.21.3",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-sass-plugin": "^3.2.0",
		"fs-extra": "^11.2.0",
		"sharp": "^0.33.4",
		"svgo": "^3.3.2"
	},
	"dependencies": {
		"glider-js": "^1.7.9",
		"motion": "^10.18.0",
		"normalize.css": "^8.0.1"
	}
}
