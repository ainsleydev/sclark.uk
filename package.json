{
	"name": "sclark",
	"version": "1.0.0",
	"private": true,
	"description": "Website for SClark.uk",
	"license": "BSD-3-Clause",
	"main": "index.js",
	"homepage": "https://sclark.uk",
	"author": {
		"name": "ainsley.dev LTD",
		"email": "hello@ainsley.dev",
		"url": "https://ainsley.dev"
	},
	"maintainers": [
		{
			"name": "Ainsley Clark",
			"email": "hello@ainsley.dev",
			"url": "https://ainsley.dev"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ainsleydev/sclark.uk.git"
	},
	"bugs": {
		"url": "https://github.com/ainsleydev/sclark.uk/issues"
	},
	"scripts": {
		"dev": "turbo dev",
		"dev:cms": "turbo dev --filter=cms",
		"dev:web": "turbo dev --filter=web",
		"build": "turbo build",
		"build:cms": "turbo build --filter=cms",
		"build:web": "turbo build --filter=web",
		"lint": "turbo lint",
		"fix": "turbo lint && prettier --write .",
		"commit": "cz",
		"types": "pnpm --filter cms run generate:types && pnpm --filter web run generate:types",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"packageManager": "pnpm@9.1.4",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.6.18",
		"turbo": "^2.0.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
