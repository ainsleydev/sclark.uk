{
	"name": "sclark",
	"version": "1.0.0",
	"private": true,
	"description": "Website for SClark.uk",
	"license": "BSD-3-Clause",
	"main": "index.js",
	"homepage": "https://sclark.uk",
	"author": {
		"name": "ainsley.dev LTD",
		"email": "hello@ainsley.dev",
		"url": "https://ainsley.dev"
	},
	"maintainers": [
		{
			"name": "Ainsley Clark",
			"email": "hello@ainsley.dev",
			"url": "https://ainsley.dev"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ainsleydev/sclark.uk.git"
	},
	"bugs": {
		"url": "https://github.com/ainsleydev/sclark.uk/issues"
	},
	"scripts": {
		"setup": "cd cms && go install github.com/a-h/templ/cmd/templ@latest && go install github.com/cosmtrek/air@latest && go generate ./... && go install github.com/evilmartians/lefthook@latest",
		"dev": "turbo run dev",
		"dev:cms": "turbo dev --filter=cms",
		"dev:web": "turbo dev --filter=web",
		"build": "turbo build",
		"build:cms": "turbo build --filter=cms",
		"build:web": "turbo build --filter=web",
		"lint": "turbo lint",
		"fix": "turbo lint",
		"gen": "turbo run gen --filter=cms && turbo run gen --filter=web",
		"test": "turbo run test --filter=web"
	},
	"packageManager": "pnpm@9.1.4",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.7.2",
		"turbo": "^2.0.7"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
