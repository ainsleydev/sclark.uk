{
	"name": "sclark",
	"version": "1.0.0",
	"private": true,
	"description": "Website for SClark.uk",
	"license": "BSD-3-Clause",
	"main": "index.js",
	"homepage": "https://sclark.uk",
	"author": {
		"name": "ainsley.dev LTD",
		"email": "hello@ainsley.dev",
		"url": "https://ainsley.dev"
	},
	"maintainers": [
		{
			"name": "Ainsley Clark",
			"email": "hello@ainsley.dev",
			"url": "https://ainsley.dev"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ainsleydev/sclark.uk.git"
	},
	"bugs": {
		"url": "https://github.com/ainsleydev/sclark.uk/issues"
	},
	"scripts": {
		"build": "turbo build",
		"build:cms": "turbo build --filter=cms",
		"build:web": "turbo build --filter=web",
		"dev": "turbo dev",
		"dev:cms": "turbo dev --filter=cms",
		"dev:web": "turbo dev --filter=web",
		"lint": "turbo lint",
		"fix": "eslint . --fix && prettier --write .",
		"types": "pnpm --filter cms run generate:types && pnpm --filter web run generate:types",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"packageManager": "pnpm@9.1.4",
	"lint-staged": {
		"*.{js,jsx,mjs,ts,tsx,css,scss,json,yaml,yml}": [
			"prettier --write ."
		],
		"*.{js,ts}": "eslint --fix"
	},
	"devDependencies": {
		"@ainsleydev/eslint-config": "^0.0.1",
		"globals": "^15.3.0",
		"turbo": "^2.0.6"
	}
}
